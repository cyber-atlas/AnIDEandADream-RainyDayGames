<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context="edu.iastate.IDE_AND_A_DREAM.Snake_Multiplayer.SnakeMainActivity"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="0dp">

        <edu.iastate.IDE_AND_A_DREAM.Snake_Multiplayer.SnakeView
            android:id="@+id/snakeViewM"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/CurrentScoreTextView"
            android:layout_width="167dp"
            android:layout_height="39dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="204dp"
            android:textColor="@android:color/white"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/HighScoreTextView"
            android:layout_width="169dp"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="29dp"
            android:layout_marginBottom="183dp"
            android:text="High Score: "
            android:textColor="#bdf70f"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/personalbest"
            android:layout_width="162dp"
            android:layout_height="66dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="134dp"
            android:textColor="@android:color/white"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/currentplayers"
            android:layout_width="166dp"
            android:layout_height="163dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>